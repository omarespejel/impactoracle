{
  "name": "impact-oracle",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@types/bun": "^1.3.4",
    "@vitest/coverage-v8": "^4.0.15",
    "supertest": "^7.1.4",
    "vitest": "^4.0.15"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@coinbase/x402": "^0.7.3",
